<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <% form.label :title %>
    <%= form.text_field :title, class:"form-control", placeholder:"Album Title" %>
  </div>

  <div class="field mb-3">
    <% form.label :artist %>
    <%= form.text_field :artist, class:"form-control", placeholder:"Artist" %>
  </div>

  <div class="field mb-3">
    <% form.label :genre %>
    <%= form.text_field :genre, class:"form-control", placeholder:"Genre" %>
  </div>

  <div class="field mb-3">
    <% form.label :about %>
    <%= form.text_field :about, class:"form-control", placeholder:"About the Album" %>
  </div>

  <div class="field mb-3">
    <%= form.label :artwork %>
    <%= form.file_field :artwork, class:"form-control", placeholder:"Album Art" %>
  </div>

   <div class="field">
      <%= form.hidden_field :user_id, :value => current_user.email  %>
   </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


