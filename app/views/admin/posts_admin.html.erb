<p id="notice"><%= notice %></p>

<h1>Posts Admin</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Post</th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%  @posts = Post.all %>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.artist %></td>
        <td><%= post.about %></td>
        <td><%= link_to 'Show', post%></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
