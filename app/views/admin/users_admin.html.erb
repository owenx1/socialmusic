<%admin_restricted%>
<p id="notice"><%= notice %></p>
<%= render 'admin/admin_nav' %>
<h1>Users Admin</h1>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>No of Reviews</th>
        <th>No of Contributions</th>
        <th>Conbtributer</th>
        <th>Admin</th>
        <th colspan="3"></th>
      </tr>
    </thead>
     <% @users = User.all %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email%></td>
          <td><%= user.reviews.count %></td>
          <td><%= user.posts.count%></td>
          <td><%= user.has_role?(:contributer)%></td>
          <td><%= user.has_role?(:admin)%></td>
          <td><%= link_to 'Show', user%></td>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>



